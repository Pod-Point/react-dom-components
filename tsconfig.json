{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "noEmit": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/__tests__"
    ]
  }
