{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "interface-name": false,
        "member-access": [
            true,
            "check-accessor",
            "check-constructor"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "ordered-imports": [false],
        "object-literal-sort-keys": [false]
    }
}
